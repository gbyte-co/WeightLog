<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
>
    <!-- metric -->
    <LinearLayout
        android:id="@+id/body_length_picker_metric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
    >
        <NumberPicker
            android:id="@+id/body_length_picker_centimeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/unit_centimeters_short"
        />

    </LinearLayout>

    <!-- imperial -->
    <!-- not functional and disabled for now -->
    <!-- ToDo: make it functional (of course) -->
    <LinearLayout
        android:id="@+id/body_length_picker_imperial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
    >
        <NumberPicker
            android:id="@+id/body_length_picker_feet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="6dp"
            android:textSize="42sp"
            android:text="'"
            tools:ignore="HardcodedText"
        />
        <NumberPicker
            android:id="@+id/body_length_picker_inches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:text=""
            tools:ignore="HardcodedText"

        />

        <NumberPicker
            android:id="@+id/body_length_picker_inch_fractions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="6dp"
            android:textSize="42sp"
            android:text='"'
            tools:ignore="HardcodedText"
        />
    </LinearLayout>
</LinearLayout>
