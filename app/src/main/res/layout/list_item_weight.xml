<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    cardview:cardCornerRadius="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/list_item_compact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/weight_compact_tv"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:textSize="@dimen/weight_list_text_size"
                tools:text="Weight"
                android:textStyle="normal|bold"
            />

            <TextView
                android:id="@+id/weight_date_compact_tv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/weight_compact_tv"
                android:gravity="end"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_centerVertical="true"
                tools:text="Date"
            />

            <TextView
                android:id="@+id/weight_time_compact_tv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/weight_date_compact_tv"
                tools:text="Time"
            />

            <TextView
                android:id="@+id/weight_change_compact_tv"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/weight_time_compact_tv"
                android:text=""
                tools:text="Difference to last"
            />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/list_item_extended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/weight_date_extended_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="18sp"
                    android:text="@string/date_button_text"
                />

                <TextView
                    android:id="@+id/weight_time_extended_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="18sp"
                    android:text="@string/time_button_text"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/weight_extended_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/weight_button_text"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_units_kg"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/assessment_extended_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bmi_label"
                />
                <TextView
                    android:id="@+id/bmi_extended_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text=""
                />
            </LinearLayout>
            <TextView
                android:id="@+id/weight_note_extended_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:visibility="gone"
            />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
