<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    cardview:cardCornerRadius="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/list_item_compact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/weight_compact_tv"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:textSize="@dimen/weight_list_text_size"
                tools:text="Weight"
                android:textStyle="normal|bold"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/weight_date_compact_tv"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/weight_compact_tv"
                android:gravity="end"
                android:layout_marginEnd="2dp"
                android:layout_centerVertical="true"
                tools:text="Date"
                android:layout_toRightOf="@id/weight_compact_tv"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/weight_change_compact_tv"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/weight_date_compact_tv"
                android:text=""
                tools:text="@string/change_from_last"
                android:layout_toRightOf="@id/weight_date_compact_tv"/>
            <LinearLayout
                android:id="@+id/assessment_compact_layout"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_toEndOf="@id/weight_change_compact_tv"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_toRightOf="@id/weight_change_compact_tv">
                <TextView
                    android:id="@+id/bmi_compact_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text=""
                    android:gravity="end"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/compat_note_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/assessment_compact_layout"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_icon_note_dark"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/assessment_compact_layout">
            </ImageView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/list_item_extended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/weight_date_extended_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="18sp"
                    android:text="@string/date_button_text"
                />

                <TextView
                    android:id="@+id/weight_time_extended_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="18sp"
                    android:text="@string/time_button_text"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/weight_extended_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/weight_button_text"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_units_kg"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/weight_log_extended_change_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="@string/change_from_last"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:id="@+id/weight_log_extended_change_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/weight_units_kg"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/assessment_extended_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bmi_label"
                />
                <TextView
                    android:id="@+id/bmi_extended_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text=""
                />
            </LinearLayout>
            <TextView
                android:id="@+id/weight_note_extended_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:visibility="gone"
            />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
