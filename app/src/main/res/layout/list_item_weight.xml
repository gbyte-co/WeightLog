<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    cardview:cardCornerRadius="4dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/list_item_weight_weight_text_view"
            android:layout_width="@dimen/weight_list_weight_field_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/weight_list_text_size"
            tools:text="Weight"
            android:textStyle="normal|bold"
            />

        <TextView
            android:id="@+id/list_item_weight_date_text_view"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/list_item_weight_weight_text_view"
            tools:text="Date"
            />

        <TextView
            android:id="@+id/list_item_weight_time_text_view"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/list_item_weight_date_text_view"
            tools:text="Time"
            />

        <TextView
            android:id="@+id/list_item_weight_change_text_view"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/list_item_weight_time_text_view"
            android:text=""
            tools:text="Difference to last"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>


